<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SettingsFragment"
    android:orientation="vertical"
    android:background="#E3E2E2">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        app:title="Settings"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/info"
            android:text="How To Use"
            style="@style/settings_style"
            android:drawableLeft="@drawable/ic_baseline_info_24" />

        <TextView
            android:id="@+id/demo"
            style="@style/settings_style"
            android:text="Demo Video"
            android:drawableLeft="@drawable/ic_baseline_video_library_24"/>

        <TextView
            android:id="@+id/share"
            style="@style/settings_style"
            android:text="Share With Friends"
            android:drawableLeft="@drawable/ic_baseline_share_24"/>

        <TextView
            android:id="@+id/privacy"
            style="@style/settings_style"
            android:text="Privacy Policy"
            android:drawableLeft="@drawable/ic_baseline_privacy_tip_24"/>

        <TextView
            android:id="@+id/rateapp"
            style="@style/settings_style"
            android:text="Rate This App"
            android:drawableLeft="@drawable/ic_baseline_star_rate_24"/>

        <TextView
            android:id="@+id/moreapps"
            style="@style/settings_style"
            android:text="More Apps"
            android:drawableLeft="@drawable/ic_baseline_apps_24"/>

    </LinearLayout>

</LinearLayout>